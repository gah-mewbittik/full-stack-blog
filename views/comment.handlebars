        <div class='newComment-container'>
            <div class='thisComment-container'>
                <h1>{{post.title}}</h1>
                <p class="thisComment">{{post.description}}</p>
                <h2>{{post.user.name}}</h2>
            </div>
       
            <div class="addComment-container">
                <h1 class='newCommentHeader' >Add Comment</h1>
                <form id='form-newComment'>
                    <!-- <input type='text' id='postTitle' placeholder='Title (required)' value='{{post.title}}'/> -->
                    <textarea id='addComment' placeholder='Add Comment'></textarea>
                    <button class='submitComment btn btn-primary' id='newCommentButton' type='submit' data-post-id="{{post.id}}">Submit Comment</button>
                    
                </form>
            </div>
                <div class="allcomments">
                    {{#each post.comments}}
                    <div class="eachComment-container">
                        <p class="commentText">{{comment_text}}</p>
                        <p class="commentUser">created by: {{user.name}}</p>
                    </div>
                    {{/each}}

                </div>
                <div class="savedComment-container"></div>
        </div>

        <script src="/js/addComment.js"></script>